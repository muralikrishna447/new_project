= semantic_form_for :activity_order, url: update_activities_order_admin_activities_path do |f|
  = section("Activities", f) do
    = sortable_table('activites') do
      %tr
        %th
      - @activities.each do |activity|
        %tr
          %td
            = hidden_field_tag "activity_ids[]", activity.id
            != activity.title
            = reorder_icon

  = f.actions do
    = f.action :submit, label: 'Submit Activity Order'
    = f.action :cancel, wrapper_html: {class: :cancel}, label: 'Cancel'

