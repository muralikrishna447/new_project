.panel
  %h3 Activity
  .panel_contents
    .attributes_table
      %table
        %tbody
          %tr
            %th Title
            %td= activity.title
          %tr
            %th Description
            %td= activity.description
          %tr
            %th Youtube Id
            %td= activity.youtube_id
          %tr
            %th Timing
            %td= activity.timing
          %tr
            %th Yield
            %td= activity.yield
          %tr
            %th Difficulty
            %td= activity.difficulty
          %tr
            %th Activity Order
            %td= activity.activity_order
          %tr
            %th Recipes
            %td
              - activity.recipes.map do |recipe|
                = link_to recipe.title, admin_recipe_path(recipe)
          %tr
            %th Steps
            %td
              - activity.steps.map do |step|
                = link_to step.title, admin_step_path(step)

