.panel
  %h3 Activity
  .panel_contents
    .attributes_table
      %table
        %tbody
          %tr
            %th Published
            %td= activity.published
          %tr
            %th Module Head?
            %td= activity.is_module_head
          %tr
            %th Link
            %td= link_to_publishable(activity)
          %tr
            %th Title
            %td= activity.title
          %tr
            %th Description
            %td= activity.description
          %tr
            %th Youtube Id
            %td= activity.youtube_id
          %tr
            %th Timing
            %td= activity.timing
          %tr
            %th Yield
            %td= activity.yield
          %tr
            %th Difficulty
            %td= activity.difficulty
          %tr
            %th Activity Order
            %td= activity.activity_order
          %tr
            %th Required Equipment
            %td
              %ul
                - activity.required_equipment.map do |equipment|
                  %li= link_to equipment.title, admin_equipment_path(equipment.equipment_id)
          %tr
            %th Optional Equipment
            %td
              %ul
                - activity.optional_equipment.map do |equipment|
                  %li= link_to equipment.title, admin_equipment_path(equipment.equipment_id)
          %tr
            %th Recipes
            %td
              %ul
                - activity.ordered_recipes.map do |recipe|
                  %li= link_to recipe.title, admin_recipe_path(recipe)
          %tr
            %th Ordered Recipe Steps
            %td
              %ol
                - activity.ordered_recipe_steps.each do |recipe_step|
                  %li= recipe_step.sorting_title
          %tr
            %th Assembly Steps
            %td
              %ol
                - activity.ordered_steps.each_with_index do |step,index|
                  %li= step.title(index)


