.panel
  %h3 Recipe
  .panel_contents
    .attributes_table
      %table
        %tbody
          %tr
            %th Title
            %td= recipe.title
          - if recipe.activity
            %tr
              %th Activity
              %td= link_to recipe.activity.title, admin_recipe_path(recipe.activity)
          %tr
            %th Ingredients
            %td
              %ul
                - recipe.ingredients.each do |ingredient|
                  %li
                    = ingredient.display_quantity
                    = link_to ingredient.title, admin_ingredient_path(ingredient.ingredient_id)
          %tr
            %th Steps
            %td
              %ul
                - recipe.steps.each_with_index do |step, index|
                  %li= link_to step.title(index) , admin_step_path(step)

