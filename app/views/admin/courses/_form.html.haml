:ruby

= semantic_form_for [:admin, @course] do |f|
  = f.inputs name: "course Details" do
    = f.input :published
    = f.input :title
    = f.input :description, label: "Description (Markdown or HTML)"

  = f.actions do
    = f.action :submit
    = f.action :cancel, wrapper_html: {class: :cancel}, label: 'Cancel'

