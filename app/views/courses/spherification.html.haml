- content_for :title, course.title
- content_for :description, course.short_description

.container.top-container
  .row.section
    .span6
      %h1= course.title
      %p= course.description
      %h4.text-center
        %i.icon-comment-alt
        Comments or Questions?
        = link_to 'Visit the Forum', 'http://forum.chefsteps.com'
      .section.well
        %ul
          %li Lorem ipsum dolor sit amet
          %li Consectetur adipiscing elit
          %li Pellentesque nisi libero
          %li Lorem ipsum dolor sit amet
          %li Consectetur adipiscing elit
          %li Pellentesque nisi libero
    .span6.well
      - if current_user && current_user.course_ids.include?(@course.id)
        You are enrolled into this course.
        = link_to 'First activity', course_activity_path(@course, @course.first_published_activity), class: 'btn btn-primary btn-large pull-right'
      - else
        = form_tag enroll_course_path(@course) do
          = submit_tag 'Enroll', class: 'btn btn-primary btn-large pull-right'
%hr
