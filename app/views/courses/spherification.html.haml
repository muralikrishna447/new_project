- content_for :title, course.title
- content_for :description, course.short_description

.container.top-container
  .row.section
    .span6
      %h1= course.title
      =image_tag 'http://placehold.it/570x320'
      %p= course.description
      %h4.text-center
        %i.icon-comment-alt
        Comments or Questions?
        = link_to 'Visit the Forum', 'http://forum.chefsteps.com'
      
    .span6.well
      - if current_user && current_user.course_ids.include?(@course.id)
        You are enrolled into this course.
        = link_to 'First activity', course_activity_path(@course, @course.first_published_activity), class: 'btn btn-primary btn-large pull-right'
      - else
        = form_tag enroll_course_path(@course) do
          = submit_tag 'Enroll', class: 'btn btn-primary btn-large pull-right'

  .row.section
    .span12
      %h2.text-center
        Be more creative in the kitchen
  .row
    .span4
      =image_tag 'http://placehold.it/570x320'
      %h4.text-center Reverse Spheres
    .span4
      =image_tag 'http://placehold.it/570x320'
      %h4.text-center Frozen Reverse Spheres
    .span4
      =image_tag 'http://placehold.it/570x320'
      %h4.text-center Direct Spheres
  .row.section
    .span12
      %h2.text-center
        Buy a kit to help you get started or <a href="#">browse the course now</a>.

%hr
- ['creative','enthusiast','professional'].each do |kit_title|
  .container-fluid.well-gradient
    .row-fluid
      .container
        .row.section
          .span11.offset1
            %h3.orange= "The #{kit_title.titleize}"
        .row.section
          .span5.offset1
            = image_tag 'http://placehold.it/570x320'
            %h4= "The #{kit_title.titleize} kit includes"
            %ul
              %li Syringe for direct spherification
              %li Stainless steel dosing spoon for reverse spherification
              %li Stainless steel straining spoon
              %li 25 g Sphere Magic
              %li 25 g Sodium Citrate
              %li 50 g Calcium Lactate Gluconate
              %li 50 g Calcium Chloride
              %li 50 g Xanthan Gum
          .span5.offset1
            = image_tag 'http://placehold.it/570x320'
            %h4= "The #{kit_title.titleize} kit takes you through these lessons"
            %ul
              %li Sphere Baths
              %li Direct Spherification
              %li Reverse Spherification
              %li Chocolate Spheres
              %li Pine Spheres
        .row.section
          .span4.offset4.well
            %h4.text-center= "The #{kit_title.titleize} Kit $39"
            .btn.btn-primary.btn-large.text-center
              Buy Now

.container-fluid
  .row-fluid
    .container
      .row.section
        %h2.text-orange Instructors
      .row.section
        .span2
          = image_tag('chris-large.jpg', title: 'Chris Young', class: 'img-profile')
        .span4
          :markdown
            #{bio_chris.copy.to_s}
        .span2
          = image_tag('grant-large.jpg', title: 'Chris Young', class: 'img-profile')
        .span4
          :markdown
            #{bio_grant.copy.to_s}

%hr

.container-fluid
  .row-fluid
    .container
      .row.section
        = render 'layouts/disqus_comments', disqus_id: "course-#{course.id}", disqus_title:course.title, disqus_url: course_url

