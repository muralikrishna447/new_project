- module_number = 0 
.course-syllabus
  - course.inclusions.each_with_index do |inclusion| 
    - case inclusion.nesting_level
    - when 0
      - module_number += 1
      .nested-0
        %h4= "Module #{module_number}: " + inclusion.activity.title.html_safe
    - when 1
      .nested-1
        - if inclusion.activity.published?
          = link_to inclusion.activity.title.html_safe, course_activity_path(course, inclusion.activity)
        - else
          = inclusion.activity.title.html_safe
    - when 2
      .nested-2
        - if inclusion.activity.published?
          = link_to inclusion.activity.title.html_safe, course_activity_path(course, inclusion.activity)
        - else
          = inclusion.activity.title.html_safe