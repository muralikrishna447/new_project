%div{ data: { behavior: 'stick-to-top-anchor' } }
.sticky-navbar{ data: { behavior: 'stick-to-top' } }
  .container
    .row
      .span1
        - if model.prev.nil?
          %a.disabled.btn <
        - else
          = link_to "<", model.prev, { class: 'btn' }
      .span4
        .menu
          %h3
            Overview
            %i.icon-caret-down
          #overview
            .accordion-group
              .accordion-heading
                %a.accordion-toggle{ data: { toggle: 'collapse', parent: '#overview' }, :href => '#collapse-one'}
                  Module 1
                  %i.icon-caret-down
              #collapse-one.accordion-body.collapse.in
                .accordion-inner
                  = link_to "Course", course_path(1)
            .accordion-group
              .accordion-heading
                %a.accordion-toggle{ data: { toggle: 'collapse', parent: '#overview' }, :href => '#collapse-two'}
                  Module 2
                  %i.icon-caret-down
              #collapse-two.accordion-body.collapse
                .accordion-inner
                  Other Stuff and stuff
      .span1
        - if model.next.nil?
          %a.disabled.btn >
        - else
          = link_to ">", model.next, { class: 'btn' }

