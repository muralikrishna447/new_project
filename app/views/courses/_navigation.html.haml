%div{ data: { behavior: 'stick-to-top-anchor' } }
.sticky-navbar{ data: { behavior: 'stick-to-top' } }
  .container
    .navbar
      .navbar-inner
        %ul.nav.nav-activities
          %li
            - if model.prev.present?
              = link_to model.prev, { class: "#{'disabled' if model.prev.nil?}" } do
                %i.icon-double-chevron-left
            - else
              %a
                %i.icon-double-chevron-left.disabled
          %li.navbar-activity-title
            .navbar-text
              %h4= model.title
          %li
            = link_to model.next, { class: "#{'disabled' if model.next.nil?}" } do
              %i.icon-double-chevron-right
        %ul.nav.nav-anchors.pull-right
          %li
            %a.icon-info-sign.icon-white{href: '#overview'}
              %span.nav-label Overview
          %li
            %a.icon-list-ol.icon-white{href: '#step-by-step'}
              %span.nav-label Step-By-Step
          %li
            %a.icon-comment{href: '#disqus_thread'}
              %span.nav-label Comments

