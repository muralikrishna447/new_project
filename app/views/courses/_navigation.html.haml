.noprint{ data: { behavior: 'stick-to-top-anchor' } }

.sticky-navbar.noprint{ data: { behavior: 'stick-to-top' } }
  .container
    .navbar
      .navbar-inner
        %ul.nav.nav-activities
          %li.navbar-activity-title
            .navbar-text
              %h4= raw activity.title

        %ul.nav.nav-anchors.pull-right
          - if course && (prev_activity = course.prev_published_activity(activity))
            %li
              = link_to course_activity_path(course, prev_activity) do
                %i.icon-double-chevron-left
                %span.nav-label &nbsp;Prev
          - if course && (next_activity = course.next_published_activity(activity))
            %li
              = link_to course_activity_path(course, next_activity) do
                %span.nav-anchors.nav-label Next&nbsp;
                %i.icon-double-chevron-right
          - if course
            %li#syllabus-flyout
              %a.icon-list-alt.icon-white
                %span.nav-label Syllabus
          %li
            %a.icon-chevron-up.icon-white{href: '#overview'}
              %span.nav-label Top
          %li
            %a.icon-print.icon-white{href: "#", onclick: 'window.print()'}
              %span.nav-label Print
          - if activity.has_quizzes?
            %li
              %a.icon-trophy.icon-white{href: '#quizzes'}
                %span.nav-label Quiz
          %li
            %a.icon-comment{href: '#disqus_thread', data: {'disqus-identifier' => disqus_id}}
              %span.nav-label Comments

          %li
            %span.nav-label
              %div{:id => "google_translate_element"}
                :javascript
                  function googleTranslateElementInit() {
                    new google.translate.TranslateElement({pageLanguage: 'en', layout: google.translate.TranslateElement.InlineLayout.SIMPLE, gaTrack: true, gaId: 'UA-34555970-1'}, 'google_translate_element');
                  }
                %script{:type => "text/javascript", :src => "//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"}


#syllabus-body
  -if course
    :javascript
      course_title = "#{course.title}"

    #syllabus-body-inner
      = render 'courses/course_breakdown', course: course

