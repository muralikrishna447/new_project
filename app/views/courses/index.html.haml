- content_for :title, "Classes"
- content_for :description, "Become a better cook with our online classes"
- content_for :keywords, @assembly_courses.map(&:title).to_sentence

.container
  .row.section
    .span12
      .section
      .text-center.section
        %h1 Holiday Special: All Classes 50% Off!

- @assembly_courses.each do |course|
  .container.classes-index
    .row.section
      .span4
        = render 'shared/media_box_2', url: landing_class_path(course), title: course.title, image: course.image_id, object: course, footer_left: course.price ? "PAID CLASS" : ""
      .span8
        .title-group
          %h2.inline-group= course.title
          -if course.average_rating > 0
            .nowrap
              .rating.inline-group
                %csrating(value="#{course.average_rating}" readonly="true")
              %a
                = link_to 'See all reviews', landing_class_path(course, anchor: "reviews")
        %p.lead= course.short_description
        = link_to 'Learn More', landing_class_path(course), class: 'btn btn-primary btn-large'