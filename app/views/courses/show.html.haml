- content_for :title, course.title
- content_for :description, course.short_description

/ .hero-unit.course-title
/   .container
/     .row
/       .span8
/         %h3= course.title

%h2= course.title
.container
  .row.top-video
    .span12

  .row.course-info
    .span8
      :markdown
        #{course.description}
    .span4.pull-right
      = render 'course_breakdown'
    .span8.pull-left
      %h3 Instructors
      %ul.unstyled
        %li.instructor#instructor-chris
          .row
            .span2
              = image_tag('chris-large.jpg', title: 'Chris Young', class: 'img-profile')
            .span6
              :markdown
                #{bio_chris.copy.to_s}
          .row
            .span8.horizontal-divider
        %li.instructor#instructor-grant
          .row
            .span2
              = image_tag('grant-large.jpg', title: 'Chris Young', class: 'img-profile')
            .span6
              :markdown
                #{bio_grant.copy.to_s}
          .row
            .span8.horizontal-divider

= render 'layouts/disqus_comments', disqus_id: 'course-1', disqus_title:course.title, disqus_url: course_url

