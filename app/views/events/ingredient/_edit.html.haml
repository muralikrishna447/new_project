- direction = direction || 'left'
- user_noun = current_user == event.user ? 'You' : event.user.name

.timeline-circle{data: {direction: direction}}
  .timeline-circle-img
    = link_to event.trackable do
      = image_tag filepicker_circle_image(event.trackable.image_id), class: 'img-circle'
  .timeline-circle-text.text-center
    %div
      = "#{user_noun} edited #{link_to event.trackable.title, event.trackable}.".html_safe
    %div
      = time_ago_in_words(event.created_at) + ' ago'
