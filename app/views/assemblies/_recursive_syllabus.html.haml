- level+=1
- nesting_class = level == 1 ? '' : 'nested'
- if includable.class.to_s == 'Assembly'
  %div(class="#{nesting_class}")
    - if level == 1
      %strong= includable.title
    - else
      = includable.title
    - includable.assembly_inclusions.each do |inclusion|
      = render 'recursive_syllabus', includable: inclusion.includable, level: level
- else
  %div(class="#{nesting_class}")
    - if level == 1
      %strong= link_to includable.title, class_path(@assembly, anchor: includable.slug), class: 'black-link'
    - else
      = link_to includable.title, class_path(@assembly, anchor: includable.slug), class: 'black-link'