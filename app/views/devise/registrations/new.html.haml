#sign-up.user-form
  %h1 Connect to sign up (or #{link_to 'log in', '#log-in'})
  = semantic_form_for(@user,
                      as: :user,
                      url: registration_path('user'),
                      remote: true) do |f|
    = f.inputs 'Create a new account:' do
      = f.input :name, label: 'Name:'
      = f.input :email, as: :email, label: 'Email:', required: true, input_html: { required: true }
      = f.input :password, label: 'Password:'
      = f.input :password_confirmation, label: 'Confirm Password:'
    .terms-of-service
      = check_box_tag 'terms', true, false, required: true
      = label_tag 'terms', 'I accept the Terms of Service'
    = f.submit "Sign Up", disable_with: 'Submitting&hellip;'.html_safe, disabled: true

