.container#main-container
  .row.section
    .span5.offset1.section
      .lead
        %h3 Awesome! Thanks for confirming.
        %p If you like, you can create a profile to:
        %ul
          %li Participate in the forums
          %li Get your questions answered about cooking answered
    .span3.offset1.section.registration
      = form_for @user, url: registration_path(@user) do |f|
        = render 'shared/error_messages', target: f
        = f.hidden_field :signed_up_from
        = f.text_field :name, placeholder: 'Name'
        = f.text_field :email, placeholder: 'Email'
        = f.password_field :password, placeholder: 'Password'
        = f.password_field :password_confirmation, placeholder: 'Confirmation'
        = f.submit 'Sign up', class: 'btn btn-primary btn-large btn-block'
        .section
          = label_tag :terms_registration do
            .hide
              = check_box_tag :terms_registration, true, true, required: true
            = "By tapping Sign up above, you are agreeing to the <b>#{link_to "Terms of Service", terms_of_service_path}</b>.".html_safe
