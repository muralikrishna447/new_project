#log-in.user-form
  %h2 Connect to log in (or #{link_to 'sign up', '#sign-up'})
  .modal-body
    = semantic_form_for(@user,
                        as: :user,
                        url: session_path('user', format: :json),
                        remote: true) do |f|
      = render 'devise/shared/facebook_login', text: 'Log in with <b>Facebook</b>'
      = f.inputs 'Log in to existing account:' do
        = f.input :email, label: 'Email:'
        = f.input :password, label: 'Password:'
      = link_to 'Forgot your password?', '#password-reset', class: 'forgot-password'
      = f.submit "Log In", disable_with: 'Submitting&hellip;'.html_safe

