.row-fluid
  .span12
    %h2= @activity.title
    %p= @activity.description

.row-fluid
  - @activity.assignments.each do |assignment|
    .span4
      = render 'shared/media_box_2', size: 'medium', url: activity_path(assignment.child_activity), title: assignment.child_activity.title, image: assignment.child_activity.featured_image