%script{:src => "/js/recipe_units.js"}
%table.ingredients
  %thead
    %tr
      %th#ingredient Ingredient
      %th#quantity{colspan: 2}
        %a#change_units{alt: "Click to switch weight units"} Quantity

  %tbody
    - recipe.ingredients.each do |ingredient|
      %tr
        %td
          - if ingredient.product_url?
            = link_to ingredient.title, ingredient.product_url, { class: ('bullet-for-sale' if ingredient.for_sale) }
          - else
            = ingredient.title
        %td.quantity= ingredient.display_quantity
        %td.unit = ingredient.unit

