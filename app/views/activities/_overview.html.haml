#overview
  .container
    .row
      .span8
        %h1= raw activity.title
        - if activity.has_description?
          :markdown
            #{activity.description}
      .span4
        -# Removed for demo
        -# .row
        -#   .span4
        -#     %h5 Difficulty Level
        -# .row
        -#   .span4
        -#     %span{ class: "difficulty #{activity.difficulty.downcase}"}
        -#       = activity.difficulty.capitalize
        -# .row
        -#   .span4
        -#     .horizontal-divider
        - if activity.has_recipes? and activity.cooked_this > 0
          .row
            .span4.cooked-this-count
              %i.icon-pot-brick
              %span#cooked-count= activity.cooked_this
              %span.verbage Cooked This
      .span12
        .horizontal-divider
    .row
      .span8
        - if activity.has_ingredients?
          %h5 Ingredients
          - activity.ordered_recipes.each do |recipe|
            = render 'ingredients_list', recipe: recipe
      .span4
        - if activity.yield.present? || activity.timing.present?
          .row
            .span4
              - if activity.yield.present?
                %h5 Yield
                %p= activity.yield
              - if activity.timing.present?
                %h5 Timing
                %p= activity.timing
        - if activity.equipment.present?
          .row
            .span4
              %h5 Equipment and Materials
        .row
          - activity.required_equipment.in_groups(2, false).each do |group|
            .span2
              = render 'equipment_list', equipment: group
        - if activity.optional_equipment.present?
          .row
            .span4
              %h5 Optional Equipment and Materials
          .row
            - activity.optional_equipment.in_groups(2, false).each do |group|
              .span2
                = render 'equipment_list', equipment: group
