.video-container{:itemscope => true, :itemprop => "video", :itemtype => "http://schema.org/VideoObject"}
  -if defined? main_object
    %meta{itemprop: 'thumbnailUrl', content: "#{filepicker_gallery_image(main_object.featured_image)}"}
    %meta{itemprop: 'embedUrl', content: "www.youtube.com/embed/#{main_object.youtube_id}"}
  .hero-visual
    .embed-container(ng-switch="heroMedia.heroDisplayType()" ng-hide="(heroMedia.heroDisplayType() == 'none')")
      %iframe.noprint#activityPlayer(ng-switch-when="video" cssrcreplacer="{{heroMedia.heroVideoURL()}}" webkitallowfullscreen mozallowfullscreen)
      %img(ng-switch-when="image" ng-src="{{heroMedia.heroImageURL(heroImageSize || 1170)}}" alt="{{getObject().title}}" title="{{getObject().title}}" itemprop="image")
      %h4.image-loading-indicator(ng-show="editMode") Loading ...

    %div.noprint.disabled-section(ng-show="(heroMedia.heroDisplayType() == 'none') && editMode" ng-click="showHeroVisualEdit = ! showHeroVisualEdit")
      Add main video or image ...

    .btn.btn-secondary.edit-hint.noprint(ng-show="editMode && (heroMedia.heroDisplayType() != 'none')" ng-click="showHeroVisualEdit = ! showHeroVisualEdit")
      %i.icon-edit
      Edit
      %i.icon-chevron-up(ng-show="showHeroVisualEdit")
      %i.icon-chevron-down(ng-show="! showHeroVisualEdit")

  %div.anim-basic-fade.noprint(ng-hide="(! showHeroVisualEdit) || (! editMode)" )
    %div
      .row
        .span2
          %h5 Youtube ID
          %input(type="text" ng-model="getObject().youtube_id")
        .span3.offset1
          %h5 &hellip; or  Image
          .csfilepicker(ng-model="getObject().image_id")

