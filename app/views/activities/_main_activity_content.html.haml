.section.ng-cloak#video-ingredient-unit(ng-class="primaryColumnClass()")

  = render 'metadata'
  = render 'hero_visual', activity: activity
  %div(ng-show="! editMode")
    = render 'layouts/social_buttons', media_object: activity, url: activity_url(activity)
  = render 'description'
  = render 'main_ingredients'
  = render 'basic_edit_pair', model: "activity.yield", name: "Yield", add_text: "Add yield info...", itemprop: "recipeYield"
  = render 'basic_edit_pair', model: "activity.timing", name: "Timing", add_text: "Add timing info..."
  = render 'new_equipment_list', model: "activity.equipment", name: "Equipment and Materials", test_method: "hasRequiredEquipment", required_string: "required", required: true
  = render 'new_equipment_list', model: "activity.equipment", name: "Optional Equipment and Materials", test_method: "hasOptionalEquipment", required_string: "optional", required: false
  = render 'activity_relationships', activity: activity
  -if activity.creator
    = render 'shared/mini_profile', user: activity.creator

.span6.ng-cloak(ng-controller="StepsController")
  = render 'steps'

-# Turn this on if you want to see the whole data structure for debugging
  .row
    .span12
      %pre
        {{activity | json}}


