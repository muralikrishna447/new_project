#edit-group
  %button#edit-mode.btn.btn-primary(type='button' ng-click="startEditMode()" ng-hide="editMode")
    Edit
  .btn-toolbar(ng-show="editMode")
    .btn-group
      -#%button.btn.dropdown-toggle{data: {toggle: 'dropdown'}, href: '#'}
      -#  %i.icon-plus
      -#  %i.icon-angle-down
      -#%ul.dropdown-menu
      -#  %li
      -#    =link_to "Video / Image", "#"
      -#  %li
      -#    =link_to "Description", "#"
      -#  %li
      -#    =link_to "Ingredients", "#"
      -#  %li
      -#    =link_to "Yield", "#"
      -#  %li
      -#    =link_to "Timing", "#"
      -#  %li
      -#    =link_to "Equipment", "#"
      -#  %li
      -#    =link_to "Optional Equipment", "#"
      -#  %li
      -#    =link_to "Steps", "#"

      %button#edit-undo.btn.btn(ng-click="undo()" ng-disabled="! undoAvailable()"){type: 'button'}
        %i.icon-undo
      %button#edit-redo.btn.btn(ng-click="redo()" ng-disabled="! redoAvailable()"){type: 'button'}
        %i.icon-repeat
    .btn-group
      %button#edit-save.btn.btn-primary(type='button' ng-click="endEditMode()" ng-show="editMode")
        Save
    .btn-group
      %button#edit-cancel.btn.btn-link{type: 'button', data: {toggle: 'modal', target: '#cancel-modal'}}
        Cancel

#cancel-modal.modal.hide.fast{tabindex: '-1', role: 'dialog'}
  .modal-header
    %button.close{type: 'button', data: {dismiss: 'modal'}}
      x
    .modal-body
      Do you really want to abandon all of your changes?
    .modal-footer
      %button.btn.btn-success{data: {dismiss: 'modal'}}
        No !!
      %button.btn.btn-danger(ng-click="cancelEditMode()"){data: {dismiss: 'modal'}}
        Yes
