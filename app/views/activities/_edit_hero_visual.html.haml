.section-large.noprint( ng-if="heroMedia.heroDisplayType() == 'none'" )
.standard-item(ng-cloak ng-if="editMode")
  .btn.btn-secondary.noprint.section( ng-show="editMode" 
                                      ng-click="showHeroVisualEdit = ! showHeroVisualEdit")
    %i.icon-edit
    Edit hero visual
    %i.icon-chevron-up(ng-show="showHeroVisualEdit")
    %i.icon-chevron-down(ng-show="! showHeroVisualEdit")

  %div.anim-basic-fade.noprint(ng-hide="(! showHeroVisualEdit) || (! editMode)" )
    %div
      %div.chunk
        %h5 Youtube ID
        %input(type="text" ng-model="getObject().youtube_id")
      %div.chunk
        %h5 Hero Image
        .csfilepicker(ng-model="getObject().image_id")
