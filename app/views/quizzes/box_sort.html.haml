:ruby
  image_data = 10.times.map do |i|
    {
      src: "http://lorempixel.com/270/152/food/#{i+1}/Picture #{i+1}",
      caption: "The caption for image number #{i+1}"
    }
  end

- content_for :custom_js do
  :javascript
    $(document).ready(function() {
      new ChefSteps.Views.BoxSortImageSet({
        el: '.box-sort'
      });
    });

#quiz-container
  .question.box-sort
    .container
      .row
        .span8
          .instructions
            Four loko next level mixtape, aliqua lomo brunch ut direct trade.
      .hero-unit.span9
        .row.images
          .span3
            .image-pile
              - image_data.each do |image|
                = image_tag image[:src], class: 'img-polaroid', data: {caption: image[:caption]}
        .row
          .span4.image-caption
            = image_data.first[:caption]
        .row
          .span3
            .sort-option
            %label I remember
          .span3
            .sort-option
            %label I'm not sure
          .span3
            .sort-option
            %label I don't remember
