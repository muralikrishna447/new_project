.navbar.navbar-fixed-top
  .navbar-inner
    .container
      = link_to root_url, class: 'brand' do
        / = image_tag 'logo-window.png', id: 'logo-window'
        #logo-window
        .logo-text chefsteps
      %button.btn.btn-navbar{data: {toggle: 'collapse', target: '.nav-collapse'}}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      .nav-collapse.collapse.pull-right
        %ul.nav
          %li
            = link_to 'Recipes', recipe_gallery_index_path
          %li.dropdown
            = link_to 'Resources', '#', class: 'dropdown-toggle', data: {toggle: 'dropdown'}
            %ul.dropdown-menu
              %li
                = link_to '#' do
                  .media
                    %h4
                      .pull-left
                        Ingredients
                      .pull-right
                        %small
                          See More Ingredients
                = link_to '#' do
                  .media
                    .pull-left
                      = image_tag 'http://placehold.it/50x50', class:'media-object'
                    .media-body
                      %h5.media-heading Ingredient Title
                      %p Ingredient Description
              %li
                = link_to techniques_path do
                  .media
                    %h4
                      .pull-left
                        Techniques
                      .pull-right
                        %small
                          See More Techniques
                = link_to '#' do
                  .media
                    .pull-left
                      = image_tag 'http://placehold.it/50x50', class:'media-object'
                    .media-body
                      %h5.media-heading Technique Title
                      %p Technique Description
              %li
                = link_to sciences_path do
                  .media
                    %h4
                      .pull-left
                        Science
                      .pull-right
                        %small
                          See More Science
                = link_to '#' do
                  .media
                    .pull-left
                      = image_tag 'http://placehold.it/50x50', class:'media-object'
                    .media-body
                      %h5.media-heading Science Title
                      %p Science Description
          %li
            = link_to 'Search', search_index_path


          %li
            - if current_user
              = link_to 'Profile', user_profile_path(current_user)
            - else
              = link_to 'Sign in', sign_in_path