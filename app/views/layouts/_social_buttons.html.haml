.section-small
  = render 'shared/like_button', likeable_object: media_object
      
  = link_to 'javascript:void(0);', class: 'btn btn-primary btn-social social-action', data: {toggle: 'popover', placement: 'bottom', content: fb_like(current_url(request)), html: true}, onclick: "mixpanel.track('Share', { 'Network': 'Facebook'});" do
    %i.icon-facebook
  = link_to "https://plus.google.com/share?url=#{current_url(request)}", onclick: "mixpanel.track('Share', { 'Network': 'Google Plus'}); javascript:window.open(this.href,
  '', 'menubar=no,toolbar=no,resizable=yes,scrollbars=yes,height=600,width=600');return false;", class: 'btn btn-primary btn-social' do
    %i.icon-google-plus
  = link_to "https://twitter.com/intent/tweet?text=I love this: #{media_object.title} from @ChefSteps!&url=#{ url_encode(current_url(request))}", class: 'btn btn-primary btn-social', onclick: "mixpanel.track('Share', {'Network':'Twitter'});" do
    %i.icon-twitter
  - if media_object.featured_image
    = link_to "http://pinterest.com/pin/create/button/?url=#{current_url(request)}&media=#{filepicker_hero_image(media_object.featured_image)}", onclick: "mixpanel.track('Share', {'Network':'Pinterest'}); javascript:window.open(this.href,
    '', 'menubar=no,toolbar=no,resizable=yes,scrollbars=yes,height=300,width=600');return false;", class: 'btn btn-primary btn-social' do
      %i.icon-pinterest
  %a{href: "mailto:?subject=#{media_object.title.html_safe}%20from%20ChefSteps.com&body=I%20thought%20you%20might%20like%20this:%20#{ url_encode(current_url(request))}", target: "_blank", id: "email-share",class: "btn btn-primary btn-social", onclick: "mixpanel.track('Share', {'Network':'Email'});"}      
    %i.icon-envelope  