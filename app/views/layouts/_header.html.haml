#header
  .nav-container
    = link_to root_url, class: 'brand' do
      = image_tag('chefsteps-logo.png', alt: 'ChefSteps')
    #menu-toggle
      .icon-th-list
    %ul#collapsible
      %li.nav-item
        = link_to course_url('accelerated-sous-vide-cooking-course') do
          %i.icon-book
          Course
      %li.nav-item
        = link_to recipe_gallery_index_url do
          %i.icon-th-large
          Recipes
      %li.nav-item
        = link_to 'http://forum.chefsteps.com' do
          %i.icon-comments-alt
          Forum
      %li.nav-item
        = link_to 'http://blog.chefsteps.com' do
          %i.icon-pencil
          Blog
      %li.nav-item.nav-item-last
        = link_to 'http://store.chefsteps.com' do
          %i.icon-shopping-cart
          Shop       
      %li.social
        = link_to 'https://www.facebook.com/Chefsteps', target: 'blank' do
          .icon-facebook
      %li.social
        = link_to 'http://twitter.com/@chefsteps', target: 'blank' do
          .icon-twitter
      %li.social
        = link_to 'http://pinterest.com/chefsteps/', target: 'blank' do
          .icon-pinterest
      %li.social
        = link_to 'https://plus.google.com/106370441183974123730/posts', target: 'blank' do
          .icon-google-plus
      %li.social
        = link_to feed_url do
          .icon-rss
      - unless external
        %li.social
          = link_to search_index_url do
            .icon-search
      %li.user
        - if user_signed_in?
          .dropdown#user-dropdown
            = link_to '#', data: {toggle: 'dropdown'} do
              = gravatar_image_tag(current_user.email, alt: current_user.name, gravatar: { default: 'http://www.chefsteps.com/assets/default_avatar.png'})
            %ul.dropdown-menu
              %li= link_to 'Profile', user_profile_path(current_user)
              %li= link_to 'Sign out', destroy_user_session_path, method: :delete
        - elsif request.path != sign_in_path
          .sign-in-button
            = link_to sign_in_path do
              .btn.btn-primary Sign in
      %li.user
        = render 'mailing_list/subscribe'

