#header
  .row.global-navigation
    .span12
      .brand-container
        %a.brand{href: root_url, target: '_top'}
          = image_tag('chefsteps-logo.png', alt: 'ChefSteps')

      .navbar
        %ul.nav.noprint
          %li
            - if current_page?(course_url('accelerated-sous-vide-cooking-course'))
              Course
            - else
              = link_to 'Course', course_url('accelerated-sous-vide-cooking-course')

          %li
            = link_to 'Recipes', recipe_gallery_index_url

          %li
            = link_to 'Forum', 'http://forum.chefsteps.com'

          %li
            = link_to 'Blog', 'http://blog.chefsteps.com'

          %li.last
            = link_to 'Shop', 'http://store.chefsteps.com'

      .navbar.noprint
        %ul.nav.social
          %li
            %a.icon-facebook{ href: "https://www.facebook.com/Chefsteps" }
          %li
            %a.icon-twitter{ href: "http://twitter.com/@chefsteps" }
          %li
            %a.icon-pinterest{ href: "http://pinterest.com/chefsteps/" }
          %li
            %a.icon-google-plus{ href: "https://plus.google.com/106370441183974123730/posts" }
          %li
            %a.icon-rss{ href: "http://feeds.feedburner.com/ChefSteps" }
          - unless external
            %li
              %a.icon-search{ href: search_index_url }


      - unless user_signed_in? or external
        .navbar.noprint
          %ul.nav.subscribe
            %li
              = render 'mailing_list/subscribe'

      -unless external
        .navbar.user-auth.noprint
          - if user_signed_in?
            .dropdown#user-dropdown
              = link_to '#', data: {toggle: 'dropdown'} do
                = gravatar_image_tag(current_user.email, alt: current_user.name, gravatar: { default: 'http://www.chefsteps.com/assets/default_avatar.png'})
              %ul.dropdown-menu
                %li= link_to 'Profile', user_profile_path(current_user)
                %li= link_to 'Sign out', destroy_user_session_path, method: :delete
          - elsif request.path != sign_in_path
            %ul.nav
              %li
                = link_to sign_in_path do
                  .btn.btn-primary Sign in

