.cs-nav-search(ng-class="{'cs-nav-search-open': showSearch}")
  %li
    .cs-nav-search-toggle(ng-click="toggleSearch()")
      %i.fa.fa-search
    .cs-nav-search-input(ng-show="showSearch" ng-cloak)
      %form(ng-submit="getSearchQuery()" method="get" name="search" ng-controller="SearchController")
        %input(placeholder="search" ng-model="navbarSearchQuery")
    .cs-nav-search-close(ng-click="toggleSearch()")
      %i.fa.fa-times
.cs-nav-links(ng-hide="showSearch")
  %li
    = link_to courses_url do
      Classes
  %li
    = link_to '/gallery' do
      Recipes
  %li
    %a(href='http://www.chefsteps.com/forum' onclick="mixpanel.track('Forum Nav Clicked')")
      Forum
  .hide-mobile
    %li.cs-nav-dropdown
      %a.cs-nav-dropdown-toggle(ng-click="toggleDropdown('resources')")
        Resources
        %i.fa.fa-caret-down
      .cs-nav-dropdown-menu(ng-show="showDropdown=='resources'" ng-cloak)
        %ul
          %li
            = link_to projects_url do
              %i.fa.fa-cubes
              Projects
          .section-tiny
          %li
            = link_to 'http://www.chefsteps.com/activities/the-egg-calculator' do
              = image_tag "https://d3awvtnmmsvyot.cloudfront.net/api/file/l4FOGWE7Swuz1kgKrNmZ", width: "15px"
              Egg Calculator
          %li
            = link_to "http://www.chefsteps.com/activities/sous-vide-time-and-temperature-guide" do
              %i.fa.fa-clock-o
              Time & Temperature Guide

          %li
            = link_to knife_collection_url do
              = image_tag "https://d92f495ogyf88.cloudfront.net/static/nav-knife-icon.png", width: "15px"
              Knife Collection
          %li
            = link_to sv_collection_url do
              = image_tag "https://d92f495ogyf88.cloudfront.net/static/nav-circulator-icon.png", width: "15px"
              Sous Vide Collection
          %li
            %a(href="http://store.chefsteps.com/collections/cookbooks-we-love")
              %i.fa.fa-book
              Cookbook Collection
  %li
    %a(href='/about')
      About
  - if current_admin?
    %li.cs-nav-dropdown
      %a.cs-nav-dropdown-toggle(ng-click="toggleDropdown('adminResources')")
        Admin
        %i.fa.fa-caret-down
      .cs-nav-dropdown-menu(ng-show="showDropdown=='adminResources'" ng-cloak)
        %ul
          %li
            %a(href="/forum/admin/dashboard")
              Comments Dashboard
          %li= link_to 'Manage Ingredients', manager_ingredients_path
          %li= link_to 'Manage Equipment', equipment_index_path
  %li
    %a(href="//twitter.com/chefsteps" target="_blank" onclick="mixpanel.track('Social Click', {'source' : 'Nav', 'network': 'Twitter'});")
      %i.fa.fa-twitter
      .hide-desktop Twitter

  %li.section
    %a(href="//facebook.com/chefsteps" target="_blank" onclick="mixpanel.track('Social Click', {'source' : 'Nav', 'network': 'Facebook'});")
      %i.fa.fa-facebook
      .hide-desktop Facebook