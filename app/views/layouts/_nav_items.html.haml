%a.cs-nav-item.button.hide-desktop(ng-click="openModal('login'); nav.showMenu = false" ng-if='!authentication.currentUser()')
  Sign In


- menu_list = get_menu_list(current_user)
- menu_list[0]&.each do |menu|
  - if menu_list[menu['id']]
    .dropdown.cs-nav-item.cs-menu-permission
      .dropdown-toggle{"tabindex": "2"} #{menu['name']}
      .dropdown-menu
        .dropdown-wrapper
          .dropdown-menu-item
            - menu_list[menu['id']].each do |sub_menu|
              %a.cs-menu-permission{"href": sub_menu['url'], "tabindex": "2"} #{sub_menu['name']}
  - else
    %a.cs-nav-item.cs-menu-permission{"href": menu['url'], "tabindex": "2"} #{menu['name']}



- if current_user
  %hr.cs-nav-item.hide-desktop

- if current_user
  %a.cs-nav-item.hide-desktop(ng-href="/profiles/{{authentication.currentUser().slug}}")
    Profile

- if current_user && Subscription::IS_STUDIO_LIVE
  %a.cs-nav-item.hide-desktop(ng-href="/subscriptions")
    Subscription

%a.cs-nav-item.hide-desktop(ng-href="/logout" ng-if='authentication.currentUser()')
  Sign Out

- if current_admin?
  .dropdown.cs-nav-item(ng-controller='csDropdownController as dropdown')
    .dropdown-toggle(ng-click='dropdown.toggle($event)' ng-keyup="$event.keyCode == 13 ? dropdown.toggle($event) : null" tabindex="2")
      Admin
    .dropdown-menu(ng-show='dropdown.showMenu')
      .dropdown-wrapper
        .dropdown-menu-item
          %a(href="/forum/admin/dashboard" tabindex="2")
            Comments Dashboard
        .dropdown-menu-item
          %a(href="/ingredients/manager" tabindex="2")
            Manage Ingredients
        .dropdown-menu-item
          %a(href="/equipment" tabindex="2")
            Manage Equipment

