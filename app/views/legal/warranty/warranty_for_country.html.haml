.container#legal
  #terms
    %div
      %span.head2_text.pull-left WARRANTY

      - if @languages.length > 1
        .pull-right
          = select_tag :lang, options_for_select(@dropdown_languages, @selected_language), {:onchange => "window.location.href='/joule/warranty/#{@country[:code]}?language=' + this.value", "aria-label" => "Select your preferred language"}

    %p.clearfix

    = render @warranty_template
