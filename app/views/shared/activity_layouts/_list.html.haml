.row
  .span9.offset1
    %div(ng-show="activity.youtube_id")
      = render 'activities/hero_visual'
    %div(ng-show="activity.description")
      = render 'activities/latest/description'
.row
  .span9.offset1(ng-controller="StepsController")
    %ul.unstyled(ng-repeat="step in activity.steps")
      %li
        %h4(ng-bind-html-unsafe="step.title | markdown | shortcode")
        %p(ng-bind-html-unsafe="step.directions | markdown | shortcode")
        %div(ng-show="!!step.youtube_id")
          .video-container(csenforceaspect)
            %iframe(ng-style="setHeight()" csenforceaspect ng-src="{{'//www.youtube.com/embed/' + step.youtube_id + '?wmode=opaque&rel=0&modestbranding=1&showinfo=0&vq=hd720'}}")
        %div(ng-show="!!step.image_id")
          %img(ng-src="{{stepImageURL(step, 840)}}" alt="{{stepImageDescription(step)}}" title="{{stepImageDescription(step)}}" itemprop="image")