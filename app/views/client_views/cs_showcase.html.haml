.cs-showcase-container(ng-cloak)
  .cs-showcase(ng-style='showcaseStyle')
    .cs-showcase-image(ng-repeat='item in collection')
      / %img(ng-src="{{item.imageUrl}}" cs-set-image-height='item')
      %div(cs-showcase-image='item')
      .cs-showcase-annotations.anim-basic-fade(ng-show='showAnnotations')
        .cs-showcase-annotation(ng-style='item.currentAnnotationStyle')
          %i.fa.fa-circle.fa-2x

.cs-showcase-items(ng-cloak)
  .cs-showcase-item-container(ng-repeat='item in annotations' cs-showcase-item='item' ng-class="item.class" ng-style="item.style")
    .cs-showcase-item
      %h2
        {{item.title}}
        {{item.style}}
      %p
        {{item.description}}

.cs-showcase-buy(ng-cloak)
  %btn.btn.btn-primary.btn-large.anim-basic-fade(ng-show='currentItem.price')
    Buy Now for ${{currentItem.price}}