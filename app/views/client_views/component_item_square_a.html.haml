.component-item.square.square-a(ng-if="item")
  .component-item-content
    %img(ng-src='{{item.image | aspect1to1 }}')
  .component-item-content
    .item-divider.first
      {{item.title}}
    .item-divider.middle
      %a.btn-outline(ng-href='{{item.url}}')
        {{item.buttonMessage}}
    .item-divider.last

.component-item.square.square-a.blank(ng-if="!item")
  .component-item-content
    .item-divider.first
      Title
    .item-divider.middle
      %a.btn-outline(ng-href='{{item.url}}')
        Button
    .item-divider.last
