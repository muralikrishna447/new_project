%h1 New Component
{{component}}
%form#component-form
  %div
    %label
      Name
    %input(ng-model='component.form.name')

  %div
    %button(ng-click="component.form.componentType = 'hero'")
      Hero
    %button(ng-click="component.form.componentType = 'list'")
      List
    %button(ng-click="component.form.componentType = 'matrix'")
      Matrix

  %div(list-form component='component' ng-if="component.form.componentType == 'list'")

  %input(type='submit' value='Save' ng-click='component.create(component.form)')
