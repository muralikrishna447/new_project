%h1 New Component
{{component.form}}
%form#component-form
  %div
    %label
      Name
    %input(ng-model='component.form.name')

  %div
    %label
      Component Type
    %button(ng-click="component.form.componentType = 'hero'")
      Hero
    %button(ng-click="component.form.componentType = 'list'")
      List
    %button(ng-click="component.form.componentType = 'matrix'")
      Matrix

  %div(hero-form component='component' ng-if="component.form.componentType == 'hero'")
  %div(list-form component='component' ng-if="component.form.componentType == 'list'")
  %div(matrix-form component='component' ng-if="component.form.componentType == 'matrix'")

%button.btn.btn-secondary(type='submit' ng-click='component.create(component.form)')
  Save
