.item.hero(ng-if="item && !viewMode" ng-class="theme")
  .item-content(ng-style="{'background-image':'url({{ item.content.image }})'}")
    .item-content-text
      .item-title
        {{item.content.title}}
      %a.item-button.btn-outline(ng-href='{{item.content.url}}')
        {{item.content.buttonMessage}}

.item.hero.blank(ng-if="!item")
  .item-content
    .item-content-text
      .item-title
        Title
      %a.item-button.btn-outline(ng-href='{{item.content.url}}')
        Button

%div(ng-if="item && viewMode=='edit'")

  %label Title
  %input(type='text' ng-model='item.content.title')

  %label Image
  %input(type='text' ng-model='item.content.image')
  %div(filepicker ng-model='item.content.image')

  %label Button Message
  %input(type='text' ng-model='item.content.buttonMessage')

  %label Url
  %input(type='text' ng-model='item.content.url')
