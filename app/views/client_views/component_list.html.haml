%ul.list(ng-style="{'padding': component.metadata.styles.list.padding}")
  %li.list-item(ng-repeat='item in content track by $index')
    .list-image
      %img(ng-src="{{item.image | aspect1to1}}")
    .list-text
      .list-title
        {{item.title}}
      .list-description
        {{item.description | sentences: 2}}
      .list-cta
        %a(ng-href='{{item.url}}')
          See the Recipe
          %i(cs-icon='arrow-small')
