%ul.list
  %li.list-item(ng-repeat='item in content')
    .list-image
      %img(ng-src="{{item.image | aspect1to1}}")
    .list-text
      .list-title
        {{item.title}}
      .list-description
        {{item.description | sentences: 2}}
      .list-cta
        %a(ng-href='{{item.url}}')
          See the Recipe
          %i(cs-icon='arrow-small')
