%div(ng-if="formState=='edit'")
  %div(ng-if="mode=='api'")
    %div
      title: {{content.title}}
    %div
      image: {{content.image}}
    %div
      buttonMessage: {{content.buttonMessage}}
    %div
      targetURL: {{content.targetURL}}
  %div(ng-if="mode=='custom'")
    %strong Container Hero Form

    %form(ng-submit='container.submit()')
      %input(type='hidden' ng-model='content.containerType' ng-init="content.containerType='hero'")

      %input(type='radio' ng-model='content.mode' value='api')
        API

      %input(type='radio' ng-model='content.mode' value='custom')
        Custom

      // API Mode
      %div(ng-if="content.mode=='api'")
        %label Source
        %input(ng-model='content.source')

      // Custom Mode
      %div(ng-if="content.mode=='custom'")
        %label Image
        %input(ng-model='content.image')

        %label Title
        %input(ng-model='content.title')

      // All Modes
      %label Button Message
      %input(ng-model='content.buttonMessage')

      %label Button Target URL
      %input(ng-model='content.targetURL')

.matrix-content(ng-if="formState!='edit'" ng-href='{{content.targetURL}}')
  %a.btn-outline(ng-href='{{content.url}}')
    {{content.buttonMessage}}
  .matrix-image
    %img(ng-src='{{content.image | aspect1to1 }}')
