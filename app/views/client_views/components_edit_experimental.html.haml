.experimental
  .experimental-nav
    .experimental-nav-item
      %label Name
      %input(type='text' ng-model='component.form.name' placeholder='name')
    .experimental-nav-item
      %label Type
      %select(ng-options="item for item in component.componentTypeOptions" ng-model='component.form.componentType')
    .experimental-nav-item
      %label Size
      %select(ng-options="item for item in component.componentSizeOptions" ng-model='component.form.metadata.allModes.styles.component.size')
  .experimental-search
    %div
      %input(type='text' placeholder='search' ng-model='searchQuery' ng-change='component.search(searchQuery)')
    %div(ng-repeat='item in component.searchResults')
      {{item.title}}
  %pre
    {{component.form | json}}

  %button.btn.btn-secondary(type='submit' ng-click='component.save(component.form)')
    Save

  %button.btn.btn-secondary(type='submit' ng-click='component.clear()')
    Clear

  %a.btn.btn-secondary(ui-sref='components.index')
    Cancel
