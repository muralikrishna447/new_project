.container-fluid
  .row-fluid.section
    .span12
      %h6.no-margin-padding CHEFSTEPS INGREDIENT WIKI
      %h2 {{obj.title}}
  .row-fluid
    .span7
      %img.section(ng-src='{{imageURL(obj.image_id)}}' ng-show="obj.image_id")
    .span5
      .short-summary.section(ng-bind-html="obj.text_fields.description | markdown | shortcode")
      %a(ng-href='/ingredients/{{obj.slug}}' target='_blank') 
        .btn.btn-large.btn-secondary LEARN MORE
