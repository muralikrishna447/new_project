.experimental
  .experimental-nav
    .experimental-nav-item
      %label Name
      %input(type='text' ng-model='component.form.name' placeholder='name')
    .experimental-nav-item
      %label Type
      %select(ng-options="item for item in component.typeOptions" ng-model='component.form.componentType')
    .experimental-nav-item
      %label Size
      %select(ng-options="item for item in component.sizeOptions" ng-model='component.form.metadata.allModes.styles.component.size')
    .experimental-nav-item
      %label Columns
      %input(type='number' ng-model='component.form.metadata.columns' ng-change='component.setNumItems()')
    .experimental-nav-item
      %label Rows
      %input(type='number' ng-model='component.form.metadata.rows' ng-change='component.setNumItems()')
    .experimental-nav-item
      %label Item Type
      %select(ng-options="item.name as item.name for item in component.itemTypes" ng-model='component.form.metadata.itemTypeName' ng-change='component.setItemType()')

  .component-container(ng-if="component.form.componentType=='matrix'")
    .component(ng-class="'component-' + component.form.metadata.allModes.styles.component.size")
      .matrix
        .matrix-item(ng-repeat='componentItem in component.form.metadata.custom.items | limitTo: component.numItems track by $index' ng-class="'matrix-item-{{component.form.metadata.columns}}-per-row'")
          %div(search-typeahead custom-method='true' on-select="component.setItem(item, componentItem)")
          .btn.btn-secondary(ng-click='component.toggleObject[$index] = !component.toggleObject[$index]')
            Edit
          %div(component-item item='componentItem' item-type-name="component.form.metadata.itemTypeName" view-mode="'edit'" styles='item.styles' ng-show='component.toggleObject[$index] == true')
          %div(component-item item='componentItem' item-type-name="component.form.metadata.itemTypeName" styles='componentItem.styles')

  %pre
    {{component.form | json}}

  %button.btn.btn-secondary(type='submit' ng-click='component.save(component.form)')
    Save

  %button.btn.btn-secondary(type='submit' ng-click='component.clear()')
    Clear

  %a.btn.btn-secondary(ui-sref='components.index')
    Cancel


