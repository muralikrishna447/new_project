// API Mode
%div(ng-if="component.form.mode == 'api'")
  %label Source
  %input(ng-model='component.form.metadata.source')

  %div( component-mapper
        connections='component.form.metadata.mapper'
        component-keys="['title', 'image', 'url']"
        response='component.response'
        component='component'
        ng-show='component.form.metadata.source' )

// Custom Mode
%div(ng-if="component.form.mode=='custom'")
  %label Image
  %input(ng-model='component.form.metadata.content.image')

  %label Title
  %input(ng-model='component.form.metadata.content.title')


  %label Button Target URL
  %input(ng-model='component.form.metadata.content.url')

// All Modes
%label Button Message
%input(ng-model='component.form.metadata.content.buttonMessage')
