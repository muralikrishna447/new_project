.modal-fullscreen
  .modal-body
    .container
      .span12
        .recommendation.pull-left(ng-repeat='activity in recommendations')
          %csGalleryItem( title="activity.title"
                          href="activity.gallery_path"
                          image="itemImageURL(activity, 400)"
                          footer-left="activity.difficulty"
                          footer-right="getFooterRightContents(activity)"
                          sash = "getSashContents(activity)"
                        )
          %div.text-center(ng-controller='LikesController')
            .btn.btn-save-for-later(ng-click="likeObject('Activity', activity.id)")
              .btn-save-for-later-icon
                %i.icon-star-empty
              .btn-save-for-later-text
                Save for Later
  .modal-header
    .container
      .span12
        %h3.pull-left Recommendations
        .pull-right(ng-click="cancel()")
          %i.icon-remove
  .modal-footer
    %button.btn.btn-primary(ng-click='update()')
      Go!