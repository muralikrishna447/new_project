.comment-manager(ng-hide="editMode")

  .comment-icon-group.noprint(ng-click="toggleShowComments($event)")
    .comments-no-count.anim-basic-fade(ng-show="commentCount <= 0")
      .comments-no-count-maybe-hover(ng-show="showWhenZero")
        %span.icon-cs-comment-open
        .plus +

    .comments-with-count.anim-basic-fade(ng-show="commentCount > 0")
      %span.icon-cs-comment-filled
      .comment-count( ng-class="{'three-digits' : commentCount > 99}")
        {{commentCount}}

  .comment-container.anim-basic-fade(ng-show="commentsOpen || staticRender")
    %span.icon-cs-close(ng-click='toggleShowComments($event)')
    %cscomments(  ng-if="commentsEverOpened || staticRender"
                  comments-type="{{commentsType}}"
                  comments-id="{{commentsId}}"
                  seo-bot="{{staticRender}}")
