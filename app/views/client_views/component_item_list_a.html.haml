.component-item.list.list-a(ng-if="item")
  %a.component-item-content(ng-href='item.content.url')
    .item-content-image
      %img(ng-src='{{item.content.image | aspect1to1 }}')
    .item-content-text
      .item-title(ng-class="'color-'+ item.styles.title.color")
        {{item.content.title}}
      .item-description
        {{item.content.description | noShortcodes | sentences:2 }}

.component-item.list.list-a.blank(ng-if="!item")
  .component-item-content
    .item-content-text
      .item-title
        Title
      .item-description
        Description
