%div(ng-controller='PlaygroundController')
  .container
    .row
      %h3 Get Token
      %form(ng-submit='getToken()' ng-cloak)
        .alert(ng-if='getTokenStatus')
          {{getTokenStatus}}
          .btn(ng-click='clear()')
            clear
        .control-group
          %input(type='text' ng-model='user.email' placeholder='email')
        .control-group
          %input(type='password' ng-model='user.password' placeholder='password')
        .control-group
          %input.btn(type='submit' value='Get Token')

    .row
      %h3 Test Token
      %form(ng-submit='testToken(user.token)' ng-cloak)
        .alert(ng-if='testTokenStatus')
          {{testTokenStatus}}
          .btn(ng-click='clear()')
            clear
        .control-group
          %input(type='text' ng-model='user.token' placeholder='token')
        .control-group
          %input.btn(type='submit' value='Test Token')