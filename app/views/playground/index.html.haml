.container(ng-controller='PlaygroundController')
  %input(ng-model='input' ng-change='search(input)')
  {{filters}}
  %div(ng-click="filters.published_status = 'published'")
    published
  %div(ng-click="filters.published_status = 'unpublished'")
    unpublished

  %div(ng-click="filters.sort = 'oldest'")
    oldest
  %div(ng-click="filters.sort = 'newest'")
    newest

  %div(ng-click="filters.generator = 'chefsteps'")
    ChefSteps
  %div(ng-click="filters.generator = 'community'")
    Community

  .row
    .span12(infinite-scroll='next()' infinite-scroll-disabled='dataLoading' infinite-scroll-immediate-check='false')
      %div(ng-repeat='activity in activities')
        %cs-index-item(title='activity.title' url='activity.url' image='activity.image')