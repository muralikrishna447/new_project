.container.home-signed-in
  .row
    .span12
      .row.section
        .span10
          %h2
            = link_to 'Latest from ChefSteps', gallery_index_path, class: 'orange-link'
        .span2.text-right
          = link_to 'See More', gallery_index_path, class: 'btn btn-large btn-outline-blue-large'
      = render 'shared/horizontal_slider', items: @latest, direction: 'right'

  .row
    .span8
      .home-section
        %h2
          = link_to 'Classes', courses_path, class: 'orange-link'
        .home-featured-item
          - home_featured_path = landing_class_path(@classes[0])
          = link_to home_featured_path do
            .top-group
              %h3(onclick= 'track_viewed_course_through_signed_in_homepage();')= @classes[0].title
              %csrating.rating(value="#{@classes[0].average_rating}" readonly="true")
            = image_tag filepicker_stream_image(@classes[0].featured_image), onclick: 'track_viewed_course_through_signed_in_homepage();'
            .section.pull-right.home-featured-item-btn(onclick= 'track_viewed_course_through_signed_in_homepage();')
              = where_user_left_off_in_course(@classes[0], current_user, 'btn btn-primary btn-large')
          .section
            = @classes[0].short_description
        - @classes.from(1).each.with_index do |course, index|
          - url = landing_class_path(course)
          .home-standard-item
            .home-standard-item-image
              = link_to url do
                = image_tag filepicker_stream_image(course.featured_image)
            .home-standard-item-text
              = link_to url do
                %h3= course.title
              %csrating.rating(value="#{course.average_rating}" readonly="true")
              %p= course.short_description
      .home-section
        %hr
      - if @recipe_developments.any?
        .home-section
          %h2
            = link_to 'Projects', projects_path, class: 'orange-link'
          - @recipe_developments.each.with_index do |recipe_development, index|
            .home-standard-item
              .home-standard-item-image
                = link_to assembly_type_path(recipe_development) do
                  = image_tag filepicker_stream_image(recipe_development.featured_image)
              .home-standard-item-text
                = link_to assembly_type_path(recipe_development) do
                  %h3= recipe_development.title
                %p= recipe_development.description
    .span4
      %h2 
        = link_to 'Activity Stream', community_activity_path, class: 'orange-link'
      .stream(ng-controller='StreamsController' ng-init="init()")
        %div(ng-repeat='stream in streams')
          %div(ng-include src="streamViewTemplate(stream)")
        %div.stream-spinner(ng-hide="hideSpinner")
          %i.icon-spinner.icon-spin.icon-large
        .stream-more(ng-show="showMoreButton" ng-cloak)
          = link_to 'See More', community_activity_path, class: 'btn btn-large btn-block btn-outline-blue-large'
    .span2

:javascript
  mixpanel.track('Viewed Signed in Homepage', {'url' : window.location.pathname});
