.container
  .row
    .span10
      .stream-header-section
        %h2 Latest from ChefSteps
        = link_to 'See More', gallery_index_path, class: 'btn btn-large btn-outline-blue-large'
      = render 'shared/horizontal_slider', items: @latest, direction: 'right'

    .span10
      .stream-header-section
        %h2 Activity Stream
        = link_to user_profile_path(current_user), class: 'btn btn-large btn-outline-blue-large' do
          See More
          %i.icon-angle-right

    .span8.offset2
      .stream
        - current_user.followings_stream.each do |group|
          - group_events = group[1]
          - path_array = group[0][0].downcase.split('_')
          - folder = path_array.first
          - file = (path_array - [folder]).join('_')
          = render "/activity_stream/#{folder}/#{file}", group_events: group_events

    .span2
