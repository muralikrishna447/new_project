  .row
    .span8
      .home-section
        %h3
          %a.black-link(href="#{@hero_cms[:url]}")
            = @hero_cms[:title]
        .home-featured-item
          = link_to @hero_cms[:url] do
            .top-group

            = image_tag @hero_cms[:image]
            .section.pull-right.home-featured-item-btn
              = link_to @hero_cms[:url] do
                .btn.btn-primary.btn-large
                  = @hero_cms[:button_text]
          .section
            = @hero_cms[:description]

        - @classes.each.with_index do |course, index|
          - url = landing_class_path(course)
          .section-large
          .home-standard-item
            .home-standard-item-image
              = link_to url do
                = image_tag filepicker_stream_image(course.featured_image)
            .home-standard-item-text
              = link_to url do
                %h3= course.title
              %csrating.rating(value="#{course.average_rating}" readonly="true")
              %p= course.short_description
        .section.pull-right
          %h4.section
            = link_to 'See more', courses_path


        .home-section
          %h3.section Projects
          - @projects.each do |project|
            - url = project_path(project)
            .home-standard-item
              .home-standard-item-image
                = link_to url do
                  = image_tag filepicker_stream_image(project.featured_image)
              .home-standard-item-text
                = link_to url do
                  %h3= project.title
                %csrating.rating(value="#{project.average_rating}" readonly="true")
                %p= project.short_description

    .span4
      .home-section
        %h3
          = link_to "Latest", gallery_index_path, class: 'black-link'
        .whats-new.section
          - @latest.each.with_index do |item, index|
            = render 'shared/media_box_4', url: activity_path(item), title: item.title, image: item.featured_image, object: item
        .section.pull-right
          %h4.section
            = link_to 'See more', gallery_index_path

      = render 'shared/bloom_hot'



:javascript
  mixpanel.track('Viewed Signed in Homepage', {'url' : window.location.pathname});
