= content_for :hero do
  .container-fluid#hero-container
    .row-fluid
      .carousel.slide#hero-carousel
        .carousel-inner
          - @recipes.each_with_index do |recipe, index|
            %div{class: "item #{'active' if index == 0}", id: "#{'hero-first' if index == 0}"}
              = render 'shared/media_hero', main_title: 'Recipe', media_image: recipe.step_images.last, media_object: recipe
  .container#hero-video
    .row
      .span10.offset1
        .video-container
          #hero-player
      .span1
        = link_to '#', id: 'player-close' do
          %h3 close

.row
  .span12
    .carousel.slide#recipe-carousel
      .carousel-inner
        - @recipes.each_slice(3).with_index do |slice, index|
          %div{class: "item #{'active' if index == 0}"}
            .row
              .span12
                %ul.thumbnails
                  - slice.each do |recipe|
                    %li.span4
                      = render 'shared/media_centered', media: recipe, media_image: recipe.step_images.last, main: 'Recipe'
      = link_to '&lsaquo;'.html_safe, '#recipe-carousel', class: 'carousel-control left', data: {slide: 'prev'}
      = link_to '&rsaquo;'.html_safe, '#recipe-carousel', class: 'carousel-control right', data: {slide: 'next'}

.row
  .span12
    .row
      .span6
        .row
          .span6
            .well
              - @discussions.each do |discussion|
                %h4= discussion[:name]
                %p= discussion[:body].html_safe
                = link_to 'Join the Discussion', discussion[:url]
      .span6
        .hero-unit
          %h2 Sign up for a FREE account
          %ul
            %li Keep track of your favorite recipes
            %li Save notes on what you've cooked
            %li FREE Bonus Content: Sous Vide Time and Temperature data sheets
          %button.btn.btn-primary.btn-large
            Sign Up Now

.row
  .span12
    .row
      .span6
        .hero-unit
          %h2 Culinary Challenge:
          %h4 Something Your Grandmother Would Have Cooked
      .span6
        - 2.times do
          %blockquote.pull-right
            %p
              "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed varius consectetur arcu, nec adipiscing turpis porta id. Nulla pellentesque, mauris quis commodo fringilla, quam lorem vehicula lorem, feugiat rhoncus tellus felis non nunc."
            %small
              User Testimonial

.row
  .span12
    .row
      .span6.offset3
        %p
          "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed varius consectetur arcu, nec adipiscing turpis porta id. Nulla pellentesque, mauris quis commodo fringilla, quam lorem vehicula lorem, feugiat rhoncus tellus felis non nunc."
        %p
          = link_to 'Follow Us on Twitter', 'http://twitter.com/@chefsteps', target: 'blank'

