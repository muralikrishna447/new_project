.row
  .span12
    .row
      .span4
        %h4.text-center Recipes
        .swipe#recipe-swiper
          .swipe-wrap
            - @recipes.each do |recipe|
              %div
                = link_to activity_path(recipe) do
                  = render 'shared/media_centered', media: recipe
      .span4
        %h4.text-center Techniques
        .swipe#technique-swiper
          .swipe-wrap
            - @techniques.each do |technique|
              %div
                = link_to activity_path(technique) do
                  = render 'shared/media_centered', media: technique
      .span4
        %h4.text-center Knowledge
        .swipe#knowledge-swiper
          .swipe-wrap
            - @sciences.each do |science|
              %dive
                = link_to activity_path(science) do
                  = render 'shared/media_centered', media: science

.row.section
  .span12
    .row
      .span6
        .row
          .span6
            %h3 Latest From Our Forums:
            %h4= @discussion[:name]
            %blockquote
              %p= truncate(strip_tags(@discussion[:body]), length: 300, separator: ' ')
              %small
                %cite
                  = @discussion[:first_name]
            - discussion_link = @discussion[:url].gsub('https://chefsteps.vanillaforums.com','http://forum.chefsteps.com')
            = link_to 'Join the Discussion', discussion_link, class: 'btn btn-primary'

            %hr

            - if @status
              #twitter-status
                %h3 Latest Tweet:
                = @status.html_safe
                = link_to 'Follow us on Twitter', 'https://twitter.com/@chefsteps', class: 'btn btn-primary'
      .span6
        .hero-unit
          %h2 Sign up for a FREE account
          %hr
          / %ul
          /   %li Keep track of your favorite recipes
          /   %li Save notes on what you've cooked
          /   %li FREE Bonus Content: Sous Vide Time and Temperature data sheets
          = link_to sign_up_path, class: 'btn btn-primary btn-large pull' do
            Sign Up Now

= content_for :footer do
  = render 'layouts/footer'