- content_for :title, "Free to Learn Culinary School"

.hero-unit.hero-well.hero-home-video
  .container.signup-banner.gray
    .row
      .span7
        %h2 ChefSteps is building the free to learn culinary school.
        %h3 Want to know when we launch?
      .span5
        = render 'mailing_list/subscribe', orange: true
    .row.top-video
      .span12
        .video-container
          %iframe{src: youtube_url("9lWGCR0RSn4") }

.hero-unit.signup-banner
  .container
    .row
      .span6
        %h2 Master sous vide cooking
        %h3 in our first free to learn cooking course
      .span.pull-right
        %a.button{ href: course_path(1) }
          .inner
            Preview Course
            %i.icon-double-chevron-right
.container
  .row
    .intro.span7
      :markdown
        #{ homepage_blurb.copy.to_s}

    .creators.span5
      %h3 From creators of Modernist Cuisine
      %ul.unstyled.creators
        %li.creator
          .row
            .span1
              = image_tag('chris.jpg', title: 'Chris Young', class: 'img-profile')
            .span3
              :markdown
                #{bio_chris.copy.to_s}
          .row
            .span4.horizontal-divider

        %li.creator
          .row
            .span1
              = image_tag('grant.jpg', title: 'Grant Crilly', class: 'img-profile')
            .span3
              :markdown
                #{bio_grant.copy.to_s}
          .row
            .span4.horizontal-divider

        %li.creator
          .row
            .span1
              = image_tag('ryan.jpg', title: 'Ryan Matthew Smith', class: 'img-profile')
            .span3
              :markdown
                #{bio_ryan.copy.to_s}
          .row
            .span4.horizontal-divider


