- content_for :title, "Free to Learn Culinary School"

.hero-unit.hero-well.hero-carousel
  .container.slider-block
    #myCarousel.carousel.slide{ data: { interval: 10000 } }
      .carousel-inner
        .item.active
          - carousel_images = split_images_copy(carousel_images_copy)
          %img{src: carousel_images.first }
        - carousel_images[1..-1].each do |image|
          .item
            %img{src: image }
      %a.carousel-control.left{ href: '#myCarousel', data: { slide: 'prev' } } &lsaquo;
      %a.carousel-control.right{ href: '#myCarousel', data: { slide: 'next' } } &rsaquo;
    .caption.bottom-left.container
      .caption-content
        %h3 Master sous vide cooking
        %h4 in our first free to learn cooking course
        %a.button{ href: course_path(1) }
          .inner
            Preview Course
            %i.icon-double-chevron-right

.hero-unit.signup-banner
  .container
    .row
      .span9
        %h2 ChefSteps is building the free to learn culinary school.
        %h3 Want to know when we launch?
      .span3
        = render 'mailing_list/subscribe'

.container
  .row
    .intro.span7
      :markdown
        #{ homepage_blurb.copy.to_s}

    .creators.span5
      %h3 From creators of Modernist Cuisine
      %ul.unstyled.creators
        %li.creator
          .row
            .span1
              = image_tag('chris.jpg', title: 'Chris Young', class: 'img-profile')
            .span3
              :markdown
                #{bio_chris.copy.to_s}
          .row
            .span4.horizontal-divider

        %li.creator
          .row
            .span1
              = image_tag('grant.jpg', title: 'Grant Crilly', class: 'img-profile')
            .span3
              :markdown
                #{bio_grant.copy.to_s}
          .row
            .span4.horizontal-divider

        %li.creator
          .row
            .span1
              = image_tag('ryan.jpg', title: 'Ryan Matthew Smith', class: 'img-profile')
            .span3
              :markdown
                #{bio_ryan.copy.to_s}
          .row
            .span4.horizontal-divider


