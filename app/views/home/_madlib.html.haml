.container-fluid.top-container.well-gradient
  .row-fluid
    .container
      .row
        .span12
          = form_tag sign_up_url, :method => :get, class: 'form-inline' do
            .madlib
              %span.text-orange
                Hi ChefSteps,
              %p
                I am
                %span.input-underlined
                  = text_field_tag 'name', nil, {placeholder: 'name', required: true}
                and my email is
                %span.input-underlined
                  = email_field_tag 'email', nil, {placeholder: 'email', required: true}
                &#46;&nbsp;&nbsp;
              %p
                I want to learn how to be a kick-ass cook.
            = submit_tag 'Sign Up Now', class: 'btn btn-primary btn-large', id: 'subscribe-email'