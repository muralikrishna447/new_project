.home-manager(ng-controller='HomeManagerController as manager')
  %div(ng-repeat='container in manager.content')
    %div(ng-switch='container.containerType')
      %div(ng-switch-when='hero')
        %div(cs-hero-form form-data='container' form-state='container.formState')
      %div(ng-switch-when='standard')
        %div(cs-standard-form form-data='container' form-state='container.formState')

  .home-manager-add-toggle(ng-click='manager.addToggle()' ng-cloak)
    %div(ng-if='!manager.showAddMenu')
      Add
    %div(ng-if='manager.showAddMenu')
      Cancel

  .home-manager-add-menu-container(ng-cloak)
    .home-manager-add-menu(ng-class="{true: 'active', false: 'inactive'}[manager.showAddMenu]")
      .home-manager-add-item(ng-click="manager.add('hero')")
        Hero
      .home-manager-add-item(ng-click="manager.add('standard')")
        Standard
