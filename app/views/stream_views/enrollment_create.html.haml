.stream-item
  .stream-item-dialogue
    %img(ng-src="{{userImageUrl(stream.user.image_id)}}")
    %h5
      %a(ng-href="/profiles/{{stream.user.slug}}" onclick='track_viewed_profile_through_stream();')
        {{stream.user.name}}
      enrolled in the
      %a(ng-href="{{stream.trackable.enrollment.enrollable.path}}" onclick='track_viewed_item_through_stream();')
        {{stream.trackable.enrollment.enrollable.title}}
      Class.
      %small
        {{stream.created_at|date:'MMM d, yyyy @ h:mma'}}
  .stream-item-image
    %a(ng-href="{{stream.trackable.enrollment.enrollable.path}}" onclick='track_viewed_item_through_stream();')
      %img(ng-src="{{mediaObjectImageUrl(stream.trackable.enrollment.enrollable.featured_image)}}")