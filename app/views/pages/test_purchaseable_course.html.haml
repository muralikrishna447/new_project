    .span4(ng-controller="StripeController" ng-init="assembly_id=#{@assembly.id}")
      -if @enrolled
        %h3 You Are Already Enrolled
        .btn.btn-large
          %a(href="#{assembly_path(@assembly)}")
            Continue Course
      -elsif @assembly.price
        %h3 So Give Us Your Money
        %p
          You'll be making macarons this lovely in no time!
        .section
          .btn.btn-primary.btn-buy(ng-click="buyModalOpen=true")
            Buy Now For Just #{number_to_currency(@assembly.price, unit: "$")}

        %div.buy-modal(close="buyModalOpen = false" modal="buyModalOpen" options="modalOptions" ng-cloak)
          .modal-header
            %h2
              Purchase #{@assembly.title} for #{number_to_currency(@assembly.price, unit: "$")}
          .modal-body
            .row-fluid
              %form.form-horizontal(stripe-form="handleStripe" name="chargeForm") 
                .control-group
                  %label.control-label(for="name")
                    Card Holder's Name
                  .controls
                    %input.input-xlarge(type="text" ng-model="name" required)
                .control-group
                  %label.control-label(for="")
                    Card Number
                  .controls
                    %input.input-xlarge(ng-model="number" payments-format="card" payments-validate="card" type="text" required)
                .control-group
                  %label.control-label(for="")
                    Expiration Date
                  .controls
                    %input.input-small(ng-model="expiry" payments-format="expiry" payments-validate="expiry" type="text" required)
                .control-group
                  %label.control-label(for="")
                    Security Code (CVC)
                  .controls
                    %input.input-small(ng-model="cvc" payments-format="cvc" payments-validate="cvc" type="text" required)
                .control-group(ng-hide="processing")
                  .controls                    
                    %button.btn.btn-primary.btn-large(ng-click="maybeStartProcessing()") Buy Now     
                    %button.btn.btn-link.cancel(ng-click="buyModalOpen = false"  type="button") Cancel
                .control-group(ng-show="processing")
                  .controls
                    %i.icon-spinner.icon-2x.icon-spin
                    Processing your card
                .control-group(ng-show="errorText")
                  .error-text
                    {{errorText}}




          